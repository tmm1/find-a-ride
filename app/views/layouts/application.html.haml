!!!
%html
  %head
    %title Find.a.Ride
    = favicon_link_tag
    = javascript_include_tag :defaults    
    = stylesheet_link_tag 'application.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    = stylesheet_link_tag 'bootstrap.css'
    = stylesheet_link_tag 'jquery.timepicker.css'
    = stylesheet_link_tag 'jquery.ui.datepicker.css'
    = stylesheet_link_tag 'jquery.ui.theme.css'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
      = csrf_meta_tag
  %body
    .navbar
      .navbar-inner
        .container
          %h2
            %a{:href => root_url, :class => 'brand'} 
              Find.a.Ride 
              %span{:class => 'badge badge-info'} Beta
          .nav-collapse
            - if user_signed_in?
              %ul{:class => 'nav'}
                = render 'shared/links'
            - else
              %ul{:class => 'nav nav-pills'}
                = render 'shared/links'
                %li#options{:class => 'dropdown'}
                  %a{:class => 'dropdown-toggle', "data-toggle" => 'dropdown', :href => 'options'} 
                    More
                    %b.caret
                  %ul{:class => 'dropdown-menu'}
                    %li= link_to("Sign up", signup_url)
                    %li= link_to("Reset password", users_reset_password_url)
                    %li= link_to("Confirm account", users_confirm_url)
            - if user_signed_in?
              %ul{:class => 'nav nav-pills pull-right'}
                %li= user_display_pic(current_user, '24x24') 
                %li#user{:class => 'dropdown'}
                  %a{:class => 'dropdown-toggle', "data-toggle" => 'dropdown', :href => 'user'} 
                    = "#{current_user.name}"
                    %b.caret
                  %ul{:class => 'dropdown-menu'}
                    %li= link_to("Edit Profile", edit_user_registration_path)
                    %li= link_to("Sign out", destroy_user_session_path, :method => :delete)
            - else
              %p{:class => 'navbar-text pull-right'}
                = link_to("Sign in", signin_url)
    .container
      .notice-area
        = render 'shared/flashes'  
      = yield
      %hr
      .footer
        %span{:class => 'badge badge-info'} &copy; Imaginea 2012
        .footer-image
          = image_tag('find_a_ride_about.gif', :size => '125x125')
    = render 'shared/contact'

    
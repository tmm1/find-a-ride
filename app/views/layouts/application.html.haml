!!!
%html
  %head
    %title Find.a.Ride
    = javascript_include_tag :defaults    
    = stylesheet_link_tag 'application.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    = stylesheet_link_tag 'bootstrap.css'
    = stylesheet_link_tag 'jquery.timepicker.css'
    = stylesheet_link_tag 'jquery.ui.datepicker.css'
    = stylesheet_link_tag 'jquery.ui.theme.css'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
      = csrf_meta_tag
  %body
    .navbar
      .navbar-inner
        .container
          %h2
            %a{:href => root_url, :class => 'brand'} Find.a.Ride
          .nav-collapse
            - if user_signed_in?
              %ul{:class => 'nav'}
                %li= link_to("Home", root_url)
                %li= link_to("About", about_home_index_path)
            - else
              %ul{:class => 'nav nav-pills'}
                %li= link_to("Home", root_url)
                %li= link_to("About", about_home_index_path)
                %li#options{:class => 'dropdown'}
                  %a{:class => 'dropdown-toggle', "data-toggle" => 'dropdown', :href => 'options'} 
                    Options
                    %b.caret
                  %ul{:class => 'dropdown-menu'}
                    %li= link_to("Sign up", new_user_registration_path)
                    %li= link_to("Reset password", new_password_path(:user))
                    %li= link_to("Confirm account", new_user_confirmation_path(:user))
            - if user_signed_in?
              %ul{:class => 'nav nav-pills pull-right'}
                %li#user{:class => 'dropdown'}
                  %a{:class => 'dropdown-toggle', "data-toggle" => 'dropdown', :href => 'user'} 
                    = "#{current_user.name}"
                    %b.caret
                  %ul{:class => 'dropdown-menu'}
                    %li= link_to("Edit Profile", edit_user_registration_path)
                    %li= link_to("Sign out", destroy_user_session_path, :method => :delete) 
            - else
              %p{:class => 'navbar-text pull-right'}
                = link_to("Sign in", new_user_session_path)
    .container
      = render 'shared/flashes'  
      = yield
      %hr
      .footer
        %b &copy; Pramati Technologies, Hyderabad. 2012.
        .footer-image
          = image_tag('find_a_ride_about.gif', :size => '125x125')



    
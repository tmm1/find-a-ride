.text
  %h2 
    If you intend to request a ride from folks, Please fill in the form below and submit.
    %small Folks offering rides will be able to find you and hook up with you.
%br
.hero-unit
  .pull-right
    %span{:class => 'label label-important'} *Fields are required
  = semantic_form_for @ride_request, :url => ride_requests_path(@ride_request) , :validate => true do |f|
    = f.inputs do
      = render :partial => "shared/auto_search_input", :locals => {:form_element => f, :name => "orig", :label => "Going from"}
      = render :partial => "shared/auto_search_input", :locals => {:form_element => f, :name => "dest", :label => "Going to"}
      #dp3{:"data-date-format" => "dd-mm-yyyy", :"data-date" => Time.now.strftime("%d-%m-%Y"), :class => "input-append date"}
        = f.input :start_date, :input_html => { :class => 'text-input' , :readonly => true, :title => 'Choose the date you are looking for a ride', :value => Time.now.strftime("%d-%m-%Y")},  :label => 'What date?', :required => true
        %span
          .add-on
            %i{:class => "icon-th"}
      =# f.input :start_date,  :input_html => { :class => 'text-input datepicker', :title => 'Enter the date you are looking for a ride'},  :label => 'What day?', :required => true
      = f.input :start_time, :input_html => { :readonly => true, :class => 'text-input timepicker', :title => 'Choose the time you are looking for a ride'}, :label => 'Roughly what time?' , :required => true
      = f.input :vehicle, :as => :select, :label => 'Vehicle you prefer?', :include_blank => false, :collection => ['4-Wheeler', '2-Wheeler'], :input_html => { :class => 'text-input', :title => 'Enter the type of vehicle you prefer'}
      = f.input :type , :as => :hidden , :value => "RideRequest"
    = f.buttons do
      = f.commit_button :label => 'Submit', :button_html => {:class => 'btn btn-primary btn-large'}

    



.text
  %h2 Don't remember your account password?
%hr
.hero-unit
  .pull-right
    %span{:class => 'label label-important'} *Fields are required
  = semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post   }) do |f|
    /= devise_error_messages!
    = f.inputs do
      = f.input :email, :input_html => {:title => 'Enter the email for your account', :class => 'text-input'}
    = f.buttons do
      = f.commit_button "Submit", :button_html => {:class => 'btn btn-primary btn-large'}
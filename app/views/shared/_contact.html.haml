#contact{:class => 'modal hide fade', :url => contact_home_index_url}
  .modal-header
    %h1 Contact Find.a.Ride
  .modal-body
    .form
      %span{:class => 'label label-important'} Ask us a question or leave feedback about the service
      %p
        %br
      = form_tag(contact_home_index_path, :id => 'contact-form') do
        = hidden_field_tag :user_login_status, user_signed_in?
        - if user_signed_in?
          = hidden_field_tag 'name', current_user.name
          = hidden_field_tag 'email', current_user.email
        - else
          %label.label Name*
          = text_field_tag 'name'      
          %label.label Email*
          = text_field_tag 'email'
        %label.label This is about
        = select_tag 'about', options_for_select(['General Feedback', 'Issues', 'Questions', 'Other'])
        %label.label
        = text_area_tag 'comments'
  .modal-footer
    .loader{:style => 'display: none;', :class => 'pull-right'}
      = image_tag('loader.gif')
    = link_to('Submit', '#', :id => 'contact-submit', :class => 'btn btn-primary  btn-large')
    


.text
  %h1
    You can invite your friends to use OnTheWay. There are three ways.
%br
.hero-unit
  = semantic_form_for 'invites', :url => send_invite_user_invites_url(current_user), :html => {:method => :post} do |f|
    = f.inputs do
      .accordion{:id => "accordion2"}
        .accordion-group
          .accordion-heading
            %span{:href => "#invite1", :class => "accordion-toggle", :"data-parent"=> "#accordion2", :"data-toggle"=> "collapse" }
              %h3 Via Email
          #invite1{:class => "accordion-body collapse in"}
            .accordion-inner
              = hidden_field_tag 'contact_type', 'via_email'
              = f.input :email, :label => "Email addresses", :input_html => { :class => 'text-input', :title => 'Enter a comma-seperated list of emails'}
              .loader{:style => 'display: none;'}
                = image_tag('loader.gif')
              = f.buttons do
                = f.commit_button "Invite", :button_html => {:class => 'btn btn-primary btn-large pull-left-invite'}
        .accordion-group
          .accordion-heading
            %span{:href => "#invite2", :class => "accordion-toggle", :"data-parent"=> "#accordion2", :"data-toggle"=> "collapse" }
              %h3 Via Gmail
          #invite2{:class => "accordion-body collapse", "data-service-url" => get_gmail_contacts_user_invites_url(current_user)}
            .accordion-inner
              = hidden_field_tag 'contact_type', 'via_gmail'
              .invite-gmail-button{:class => 'btn btn-info', :href => '#import-gmail-contacts', :id => 'gmail-contacts-button', "data-toggle" => "modal"}
                %p Invite your Gmail Contacts
        .accordion-group
          .accordion-heading
            %span{:href => "#invite3", :class => "accordion-toggle", :"data-parent"=> "#accordion2", :"data-toggle"=> "collapse" }
              %h3 Via Facebook
          #invite3{:class => "accordion-body collapse"}
            .accordion-inner
              = hidden_field_tag 'contact_type', 'via_facebook'
              %p Invite friends via Facebook

#import-gmail-contacts{:class => 'modal hide fade'}
  = render :partial => 'import_gmail_contacts', :locals => { :all_contacts => [] }
  

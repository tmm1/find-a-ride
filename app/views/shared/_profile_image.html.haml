%table
  %tr
    %td.label{:width => '143 px', :style => 'color:block; font-weight: bold;'}
      = label
    %td.image{:width => '100 px'}
      - if @user.photo_file_name && (@user.errors[:photo_content_type].blank? && @user.errors[:photo_file_size].blank?)
        = image_tag(@user.photo.url, :size => '75x75')
      - else
        = image_tag('blank_profile_picture.png', :size => '75x75')
    %td.browse
      = form_element.file_field :photo
%br

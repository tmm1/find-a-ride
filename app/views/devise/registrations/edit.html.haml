%h2
  Update your profile information here.
#form_wrapper
  = semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    = f.inputs do
      = f.input :email
      = f.input :first_name
      = f.input :last_name
      = f.input :password, :hint => "(leave blank if you don't want to change it)"
      = f.input :password_confirmation
      = f.input :mobile
      = f.input :landline
      -[:origin, :destination].each do |field|
        = render :partial => "shared/auto_search_input", :locals => {:form_element => f, :name => field}
      = f.input :driver
      = f.input :rider
    = f.buttons do
      = f.commit_button "Update"
= link_to "Back", :back

.hero-unit
  .text-center
    %h2 You are few minutes away from getting yourself an account
  %br
  .pull-right
    %span{:class => 'label label-important'} *Fields are required
  = semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name ) , :html => {:autocomplete =>"off"}) do |f|
    = f.inputs do
      = f.input :email, :input_html => {:title => 'Enter your email', :class => 'text-input'}
      = f.input :first_name, :input_html => {:title => 'Enter your first name', :class => 'text-input'}
      = f.input :last_name, :input_html => {:title => 'Enter your last name', :class => 'text-input'}
      = f.input :mobile, :required => true ,:input_html => {:title => 'Enter your mobile number', :class => 'text-input'}
      = f.input :mobile_required, :as => :hidden, :value => true
      = f.input :password, :input_html => {:title => 'Enter a secret password', :class => 'text-input'}
      = f.input :password_confirmation, :input_html => {:title => 'Confirm your password', :class => 'text-input'}
      = f.input :terms, :as => :boolean, :error_class => "terms_cond_error", :input_html => {:class => 'terms-and-conds'}, :label => "By Signing up, you agree to the <a data-toggle=\"modal\" href=\"#terms\">terms and conditions</a> of OnTheWay".html_safe
    = f.buttons do
      = f.commit_button "Sign me up", :button_html => {:class => 'btn btn-primary btn-large'}
= render 'shared/tos'

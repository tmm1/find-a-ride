#import-modal
  .modal-header
    %h2 Fill in your Gmail account information
    %br
    %span{:class => 'label label-important'} Contacts retrieval may not work if 2-step authentication is enabled
  .modal-body
    %label.label Email*
    = text_field_tag 'gmail_userid'
    %label.label Password*
    = password_field_tag 'gmail_password'
  .modal-footer
    .loader{:style => 'display: none;'}
      = image_tag('loader.gif')
    #fetch-gmail-contacts{:class => 'btn btn-primary btn-large submit-button enter-key'}
      Submit
